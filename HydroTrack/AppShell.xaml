<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HydroTrack.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HydroTrack"
    xmlns:views="clr-namespace:HydroTrack.Views"
    xmlns:viewss="clr-namespace:HydroTrack.Views.SettingsViews"
    Shell.FlyoutBehavior="Disabled"
    Title="HydroTrack">

    <ShellContent Title="Home" 
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage" />

    <ShellContent Route="SplashView"
                  ContentTemplate="{DataTemplate views:SplashView}" />

    <ShellContent Route="LoginView"
                  ContentTemplate="{DataTemplate views:LoginView}" />

    <ShellContent Route="MainView"
                  ContentTemplate="{DataTemplate views:MainView}" />

    <ShellContent Route="SettingsView"
                  ContentTemplate="{DataTemplate views:SettingsView}" />

    <ShellContent Route="ChangePasswordView"
                  ContentTemplate="{DataTemplate viewss:ChangePasswordView}" />

</Shell>
