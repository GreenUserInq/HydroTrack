<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HydroTrack.Views.SettingsViews.SettingsView"
             x:Name="RootView">

    <VerticalStackLayout Padding="10" Spacing="20">

        <!-- Смена пароля -->
        <Frame HeightRequest="100"
               CornerRadius="10"
               BackgroundColor="#5EEAD4"
               HasShadow="False"
               Padding="20"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="Center">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Text="Смена пароля"
                       FontSize="18"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       TextColor="Black"
                       Grid.Column="0" />

                <Image Source="settingsicon.png"
                       Aspect="AspectFit"
                       WidthRequest="40"
                       HeightRequest="40"
                       VerticalOptions="Center"
                       Grid.Column="1" />
            </Grid>

            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding OpenChangePasswordCommand}" />
            </Frame.GestureRecognizers>
        </Frame>

        <!-- Параметры подключения -->
        <Frame HeightRequest="100"
               CornerRadius="10"
               BackgroundColor="#1ABC9C"
               HasShadow="False"
               Padding="20"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="Center">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Text="Параметры подключения"
                       FontSize="18"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       TextColor="White"
                       Grid.Column="0" />

                <Image Source="settingsicon.png"
                       Aspect="AspectFit"
                       WidthRequest="40"
                       HeightRequest="40"
                       VerticalOptions="Center"
                       Grid.Column="1" />
            </Grid>

            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding OpenConnectionSettingsCommand}" />
            </Frame.GestureRecognizers>
        </Frame>

    </VerticalStackLayout>
</ContentView>
