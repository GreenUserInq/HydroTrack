<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HydroTrack.Views.SettingsViews.ChangePasswordView"
             BackgroundColor="Transparent"
             Padding="20">

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="20">

            <Label Text="Смена пароля"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <!-- Текущий пароль -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Текущий пароль" FontSize="16" TextColor="Black" />
                <Entry Placeholder="Введите текущий пароль"
                       IsPassword="True"
                       BackgroundColor="White"
                       TextColor="Black"
                       PlaceholderColor="DarkGray"
                       Text="{Binding CurrentPassword}" />
            </VerticalStackLayout>

            <!-- Новый пароль -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Новый пароль" FontSize="16" TextColor="Black" />
                <Entry Placeholder="Введите новый пароль"
                       IsPassword="True"
                       BackgroundColor="White"
                       TextColor="Black"
                       PlaceholderColor="DarkGray"
                       Text="{Binding NewPassword}" />
            </VerticalStackLayout>

            <!-- Подтверждение пароля -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Подтвердите новый пароль" FontSize="16" TextColor="Black" />
                <Entry Placeholder="Повторите новый пароль"
                       IsPassword="True"
                       BackgroundColor="White"
                       TextColor="Black"
                       PlaceholderColor="DarkGray"
                       Text="{Binding ConfirmPassword}" />
            </VerticalStackLayout>

            <!-- Статус -->
            <Label Text="{Binding StatusMessage}"
                   TextColor="Red"
                   FontSize="14"
                   HorizontalOptions="Center"
                   LineBreakMode="WordWrap" />

            <!-- Кнопка -->
            <Button Text="Сменить пароль"
                    Command="{Binding ChangePasswordCommand}"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    TextColor="Black"
                    BackgroundColor="#dceeff"
                    Style="{StaticResource FlatButtonStyle}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentView>
