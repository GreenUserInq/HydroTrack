<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HydroTrack.Views.SettingsViews.ChangePasswordView"
             NavigationPage.HasNavigationBar="False"
             Background="#7bc7e3">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="93*"/>
        </Grid.RowDefinitions>

        <HorizontalStackLayout Grid.Row="0"
                               HorizontalOptions="Start" 
                               Spacing="10">
            <Button Text="Main"
                    BackgroundColor="Transparent"
                    TextColor="Black" 
                    Style="{StaticResource FlatButtonStyle}"
                    Command="{Binding GoMain}"/>

            <Button Text="Back"
                    BackgroundColor="Transparent"
                    TextColor="Black" 
                    Style="{StaticResource FlatButtonStyle}"
                    Command="{Binding GoBack}"/>

        </HorizontalStackLayout>
        
        <VerticalStackLayout Grid.Row="1">
            <Entry Placeholder="Текущий пароль" IsPassword="True" Text="{Binding CurrentPassword}" />
            <Entry Placeholder="Новый пароль" IsPassword="True" Text="{Binding NewPassword}" />
            <Entry Placeholder="Подтвердите пароль" IsPassword="True" Text="{Binding ConfirmPassword}" />
            <Button Text="Изменить пароль" Command="{Binding ChangePasswordCommand}" />
            <Label Text="{Binding StatusMessage}" TextColor="Red" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>