<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HydroTrack.Views.SettingsViews.ChangePasswordView">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

            <Label Text="Смена пароля"
                   FontSize="28"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />

            <Entry Placeholder="Текущий пароль"
                   IsPassword="True"
                   Text="{Binding CurrentPassword}" />

            <Entry Placeholder="Новый пароль"
                   IsPassword="True"
                   Text="{Binding NewPassword}" />

            <Entry Placeholder="Подтвердите новый пароль"
                   IsPassword="True"
                   Text="{Binding ConfirmPassword}" />

            <Label Text="{Binding StatusMessage}"
                   TextColor="Red"
                   FontSize="14"
                   LineBreakMode="WordWrap"
                   HorizontalOptions="Center" />

            <Button Text="Сменить пароль"
                    Command="{Binding ChangePasswordCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="12"
                    FontAttributes="Bold" 
                    Style="{StaticResource FlatButtonStyle}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>