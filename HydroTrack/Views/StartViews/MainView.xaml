<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HydroTrack.Views.MainView"
             NavigationPage.HasNavigationBar="False"
             Background="#7bc7e3">

    <ContentPage.Resources>
        <ControlTemplate x:Key="SidebarRadioTemplate">
            <Border x:Name="ButtonBorder"
                    BackgroundColor="Transparent"
                    HorizontalOptions="FillAndExpand"
                    Stroke="Transparent"
                    StrokeThickness="0"
                    WidthRequest="200">
                <Label x:Name="ButtonLabel"
                       Text="{TemplateBinding Content}"
                       TextColor="White"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="Center" 
                       Padding="10"/>
                <Border.Triggers>
                    <DataTrigger TargetType="Border"
                                 Binding="{Binding IsChecked, Source={RelativeSource Mode=TemplatedParent}}"
                                 Value="True">
                        <Setter Property="BackgroundColor" Value="#117FA4" />
                    </DataTrigger>
                </Border.Triggers>
            </Border>
        </ControlTemplate>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" HeightRequest="50" BackgroundColor="#1F4F5F">
            <ImageButton Source="menubutton.png"
                         Background="Transparent"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"
                         Clicked="OnMenuButtonClicked"
                         Margin="10,0"/>
        </Grid>

        <!-- Боковая панель -->
        <ContentView x:Name="Sidebar"
                     Grid.Row="1"
                     Grid.Column="0"
                     BackgroundColor="#4AAEC3"
                     WidthRequest="200"
                     TranslationX="-200"
                     IsVisible="False"
                     ZIndex="1">
            <VerticalStackLayout HorizontalOptions="StartAndExpand">
                <Label Text="Меню" FontSize="20" TextColor="Black" HorizontalOptions="Center"/>

                <RadioButton x:Name="HomeRadioButton" 
                             Content="Главная" Value="Home" GroupName="Menu"
                             BackgroundColor="Transparent"
                             HorizontalOptions="StartAndExpand"
                             ControlTemplate="{StaticResource SidebarRadioTemplate}"
                             CheckedChanged="OnMenuItemSelected" />

                <RadioButton x:Name="SettingsRadioButton" 
                             Content="Настройки" Value="Settings" GroupName="Menu"
                             BackgroundColor="Transparent"
                             HorizontalOptions="StartAndExpand"
                             ControlTemplate="{StaticResource SidebarRadioTemplate}"
                             CheckedChanged="OnMenuItemSelected" />

                <RadioButton x:Name="PassRadioButton" 
                             Content="Сменить пароль" Value="Pass" GroupName="Menu"
                             BackgroundColor="Transparent"
                             HorizontalOptions="StartAndExpand"
                             ControlTemplate="{StaticResource SidebarRadioTemplate}"
                             CheckedChanged="OnMenuItemSelected" />
            </VerticalStackLayout>
        </ContentView>

        <!-- Контент -->
        <ContentView Grid.Row="1" Grid.Column="1"
                     BackgroundColor="Transparent"
                     Content="{Binding CurrentView}" />
    </Grid>
</ContentPage>

